{
  "kind": "collectionType",
  "collectionName": "experiments",
  "info": {
    "singularName": "experiment",
    "pluralName": "experiments",
    "displayName": "Experiment",
    "description": "A/B testing and experimentation configuration"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "experimentId": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "name": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "text"
    },
    "status": {
      "type": "enumeration",
      "enum": [
        "active",
        "paused",
        "completed",
        "draft"
      ],
      "default": "draft",
      "required": true
    },
    "startDate": {
      "type": "datetime",
      "required": true
    },
    "endDate": {
      "type": "datetime"
    },
    "targetingRules": {
      "type": "component",
      "repeatable": false,
      "component": "experiment.targeting-rules",
      "required": true
    },
    "variants": {
      "type": "component",
      "repeatable": true,
      "component": "experiment.variant",
      "required": true
    }
  }
}