{
  "kind": "collectionType",
  "collectionName": "resource_authors",
  "info": {
    "singularName": "resource-author",
    "pluralName": "resource-authors",
    "displayName": "Articles Author",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "string",
      "required": true
    },
    "resource_pages": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::resource-page.resource-page",
      "mappedBy": "authors"
    },
    "bio": {
      "type": "text",
      "required": true
    },
    "image": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    }
  }
}
